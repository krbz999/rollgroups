<form class="rollgroups">
  <div class="inputs flexrow">
    <div class="flexcol" name="rollgroup-formulas">
      <div class="damage-header">{{localize "ROLLGROUPS.CONFIG.FORMULA"}}</div>
      {{{parts}}}
      <div class="damage-footer"></div>
    </div>
    {{#each groups as |group|}}
    <div class="flexcol" name="rollgroup-groups">
      {{{group}}}
      <div class="group-delete trigger" name="delete">
        <a class="delete-button">
          <i class="fa-solid fa-trash"></i>
        </a>
      </div>
    </div>
    {{/each}}
    <div class="flexcol">
      <div class="add-header trigger" name="add">
        <a class="add-button">
          <i class="fa-solid fa-plus"></i>
        </a>
      </div>
    </div>
  </div>
  <div class="footer">
    <button name="submit"><i class="fa-solid fa-save"></i> {{localize "Save"}}</button>
  </div>
</form>
